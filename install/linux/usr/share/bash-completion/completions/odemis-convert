# bash completion for odemis-convert

_have odemis-convert &&
_odemis_convert()
{
    local cur prev
    COMPREPLY=()
    _get_comp_words_by_ref cur prev
    case $prev in
        --output|-o|--input|-i|--effcomp|--minus|-m)
            COMPREPLY=($(compgen -o filenames -o plusdirs -f -- "$cur"))
            return 0
            ;;
    esac

    case $cur in
        *)
            COMPREPLY=( $(compgen -W '--help --version \
                --input --output --effcomp --minus' -- "$cur") )
            return 0
            ;;
    esac

    return 0
}

_have odemis-convert && complete -F _odemis_convert odemis-convert -o filenames

